.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.input-phone,
.input-code {
  width: 80%;
  height: 40rpx;
  border-radius: 4rpx;
  border: 1rpx solid #ccc;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.btn-getcode {
  width: 60%;
  height: 70rpx;
  background-color: #09BB07;
  color: #fff;
  font-size: 28rpx;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
}

.btn-getcode:disabled {
  background-color: #ccc;
}

.input-code {
  margin-bottom: 40rpx;
}

.label-agree {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.checkbox-agree {
  margin-right: 10rpx;
}

.btn-next {
  width: 80%;
  height: 70rpx;
  background-color: #09BB07;
  color: #fff;
  font-size: 28rpx;
  border-radius: 4rpx;
}

.btn-next:disabled {
  background-color: #ccc;
}
